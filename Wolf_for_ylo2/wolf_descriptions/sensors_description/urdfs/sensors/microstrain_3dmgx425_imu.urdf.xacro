<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

	<xacro:include filename="$(find sensors_description)/urdfs/sensors/imu.gazebo.xacro"/>
<xacro:include filename="$(find sensors_description)/urdfs/common.xacro"/>

	<!-- ============================ IMU microstrain ============================== -->
	<!-- The xacro macro xacro:microstrain_3dmgx425_imu: imu frame -->
        <!-- see Fig. 34 page 61 of Technical manual -->
	<xacro:macro name="microstrain_3dmgx425_imu" params="parent *origin imu_name imu_topic update_rate">

		<!-- Joint -->
		<joint name="${imu_name}_joint" type="fixed">
                        <origin xyz="0.00485 0 0.0045" rpy="0.0 ${-PI} 0.0"/>
                        <parent link="${imu_name}_mount" />
                        <child link="${imu_name}"/>
		</joint>

                <joint name="${imu_name}_mount_joint" type="fixed">
                        <xacro:insert_block name="origin"/>
                        <parent link="${parent}" />
                        <child link="${imu_name}_mount"/>
                </joint>

                <link name="${imu_name}_mount">
                <inertial>
                    <origin xyz="-0.00020  0.00010  0.00110"/>
                    <mass value="0.001"/>
                    <inertia ixx="0.0" iyy="0.0" izz="0.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
                </inertial>
                <visual>
                        <origin xyz="0.0 0.0 0.00555" rpy="0 0 0"/>
                        <geometry>
                                <box size="0.0329 0.0244 0.0111" />
                        </geometry>
                        <material name="black">
                                <color rgba="0 0 0 0.9"/>
                        </material>
                </visual>
                </link>

		<!-- Link -->
		<link name="${imu_name}">
			<inertial>
                                <origin xyz="0.0  0.0  0.0"/>
                                <mass value="0.001"/>
				<inertia ixx="0.0" iyy="0.0" izz="0.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
			</inertial>
			<visual>			
				<geometry>
                                        <sphere radius="0.0005" />
				</geometry>				
			</visual>
		</link>
		
		<!-- IMU Gazebo plugin definition -->				
		<xacro:imu_sensor imu_name="${imu_name}" imu_topic="${imu_topic}"
		 	update_rate="${update_rate}"
			rate_mean="${microstrain_gx425_vel_mean}"
		 	rate_stddev="${microstrain_gx425_vel_stddev}"
		 	rate_bias_mean="${microstrain_gx425_vel_bias_mean}"
		 	rate_bias_stddev="${microstrain_gx425_vel_bias_stddev}"
		 	accel_mean="${microstrain_gx425_acc_mean}"
		 	accel_stddev="${microstrain_gx425_acc_stddev}"
			accel_bias_mean="0.002"
		 	accel_bias_stddev="0.001"/>

	</xacro:macro>

</robot>
